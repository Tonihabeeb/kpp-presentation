{
  "collectionName": "components_blocks_hero_sections",
  "info": {
    "displayName": "Hero Section",
    "description": "Large header section with background image/video and text overlay"
  },
  "options": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "subtitle": {
      "type": "text"
    },
    "description": {
      "type": "richtext"
    },
    "backgroundImage": {
      "type": "media",
      "multiple": false,
      "allowedTypes": ["images"]
    },
    "backgroundVideo": {
      "type": "media",
      "multiple": false,
      "allowedTypes": ["videos"]
    },
    "ctaButtons": {
      "type": "component",
      "repeatable": true,
      "component": "elements.button"
    },
    "textAlignment": {
      "type": "enumeration",
      "enum": ["left", "center", "right"],
      "default": "center"
    },
    "overlayOpacity": {
      "type": "decimal",
      "min": 0,
      "max": 1,
      "default": 0.5
    },
    "height": {
      "type": "enumeration",
      "enum": ["small", "medium", "large", "fullscreen"],
      "default": "large"
    }
  }
}
