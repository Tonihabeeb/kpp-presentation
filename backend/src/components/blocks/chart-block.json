{
  "collectionName": "components_blocks_chart_blocks",
  "info": {
    "displayName": "Chart Block",
    "description": "Interactive charts and graphs for data visualization"
  },
  "options": {},
  "attributes": {
    "title": {
      "type": "string"
    },
    "description": {
      "type": "text"
    },
    "chartType": {
      "type": "enumeration",
      "enum": ["line", "bar", "pie", "doughnut", "area", "scatter"],
      "default": "bar"
    },
    "chartData": {
      "type": "json"
    },
    "chartOptions": {
      "type": "json"
    },
    "height": {
      "type": "integer",
      "default": 400
    },
    "showLegend": {
      "type": "boolean",
      "default": true
    },
    "showGridLines": {
      "type": "boolean",
      "default": true
    }
  }
}
