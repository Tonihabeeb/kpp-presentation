{
  "collectionName": "components_blocks_galleries",
  "info": {
    "displayName": "Gallery",
    "description": "Image gallery with various layout options"
  },
  "options": {},
  "attributes": {
    "title": {
      "type": "string"
    },
    "images": {
      "type": "media",
      "multiple": true,
      "required": true,
      "allowedTypes": ["images"]
    },
    "layout": {
      "type": "enumeration",
      "enum": ["grid", "masonry", "slider", "carousel"],
      "default": "grid"
    },
    "columns": {
      "type": "enumeration",
      "enum": ["2", "3", "4", "5"],
      "default": "3"
    },
    "showCaptions": {
      "type": "boolean",
      "default": false
    }
  }
}
