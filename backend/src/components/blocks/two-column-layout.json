{
  "collectionName": "components_blocks_two_column_layouts",
  "info": {
    "displayName": "Two Column Layout",
    "description": "Two column responsive layout with flexible content"
  },
  "options": {},
  "attributes": {
    "leftColumn": {
      "type": "richtext"
    },
    "rightColumn": {
      "type": "richtext"
    },
    "leftColumnImage": {
      "type": "media",
      "multiple": false,
      "allowedTypes": ["images"]
    },
    "rightColumnImage": {
      "type": "media",
      "multiple": false,
      "allowedTypes": ["images"]
    },
    "columnRatio": {
      "type": "enumeration",
      "enum": ["1:1", "1:2", "2:1", "1:3", "3:1"],
      "default": "1:1"
    },
    "verticalAlignment": {
      "type": "enumeration",
      "enum": ["top", "center", "bottom"],
      "default": "center"
    },
    "gap": {
      "type": "enumeration",
      "enum": ["none", "small", "medium", "large"],
      "default": "medium"
    },
    "reverseOnMobile": {
      "type": "boolean",
      "default": false
    }
  }
}
