    "videoURL": {
      "type": "string"
    },
    "poster": {
      "type": "media",
      "multiple": false,
      "allowedTypes": ["images"]
    },
    "autoplay": {
      "type": "boolean",
      "default": false
    },
    "muted": {
      "type": "boolean",
      "default": false
    },
    "controls": {
      "type": "boolean",
      "default": true
    },
    "loop": {
      "type": "boolean",
      "default": false
    },
    "caption": {
      "type": "text"
    }
  }
}
