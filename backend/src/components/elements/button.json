{
  "collectionName": "components_elements_buttons",
  "info": {
    "displayName": "Button",
    "description": "Configurable button element"
  },
  "options": {},
  "attributes": {
    "text": {
      "type": "string",
      "required": true
    },
    "url": {
      "type": "string"
    },
    "style": {
      "type": "enumeration",
      "enum": ["primary", "secondary", "outline", "ghost", "link"],
      "default": "primary"
    },
    "size": {
      "type": "enumeration",
      "enum": ["small", "medium", "large"],
      "default": "medium"
    },
    "icon": {
      "type": "string"
    },
    "newTab": {
      "type": "boolean",
      "default": false
    }
  }
}
