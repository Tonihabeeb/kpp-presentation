<svg width="400" height="300" xmlns="http://www.w3.org/2000/svg">
  <rect width="100%" height="100%" fill="#8b4513"/>
  
  <!-- Mining pit background -->
  <ellipse cx="200" cy="200" rx="180" ry="80" fill="#654321"/>
  <ellipse cx="200" cy="190" rx="160" ry="70" fill="#8b7355"/>
  <ellipse cx="200" cy="180" rx="140" ry="60" fill="#a0522d"/>
  
  <!-- Mining equipment -->
  <rect x="100" y="150" width="40" height="30" fill="#ffff00" rx="4"/>
  <rect x="120" y="140" width="15" height="10" fill="#ffff00"/>
  <circle cx="110" cy="185" r="8" fill="#202124"/>
  <circle cx="130" cy="185" r="8" fill="#202124"/>
  
  <rect x="250" y="160" width="50" height="25" fill="#ff6b35" rx="4"/>
