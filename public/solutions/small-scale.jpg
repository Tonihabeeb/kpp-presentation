<svg width="400" height="300" xmlns="http://www.w3.org/2000/svg">
  <rect width="100%" height="100%" fill="#f0f2f5"/>
  
  <!-- Small scale KPP system -->
  <rect x="150" y="100" width="100" height="120" fill="#4285f4" stroke="#1967d2" stroke-width="3" rx="8"/>
  
  <!-- Main unit -->
  <rect x="170" y="120" width="60" height="80" fill="white" stroke="#e1e5e9" stroke-width="1" rx="4"/>
  <circle cx="200" cy="160" r="25" fill="#34a853"/>
  <text x="200" y="165" text-anchor="middle" fill="white" font-family="Arial, sans-serif" font-size="12" font-weight="bold">KPP</text>
  
  <!-- Power output indicator -->
  <rect x="160" y="110" width="80" height="8" fill="#fbbc04" rx="4"/>
  <text x="200" y="107" text-anchor="middle" fill="#202124" font-family="Arial, sans-serif" font-size="10" font-weight="bold">100kW</text>
  
  <!-- Base -->
  <rect x="140" y="220" width="120" height="20" fill="#9aa0a6" rx="4"/>
  
  <!-- Connection points -->
  <circle cx="180" cy="230" r="4" fill="#ea4335"/>
  <circle cx="200" cy="230" r="4" fill="#34a853"/>
  <circle cx="220" cy="230" r="4" fill="#4285f4"/>
  
  <!-- Small building/home -->
  <rect x="50" y="180" width="60" height="50" fill="#f8f9fa" stroke="#dadce0" stroke-width="1" rx="4"/>
  <polygon points="50,180 80,150 110,180" fill="#ea4335"/>
  <rect x="65" y="200" width="10" height="15" fill="#4285f4" rx="1"/>
  <rect x="85" y="200" width="10" height="15" fill="#4285f4" rx="1"/>
  <rect x="75" y="215" width="10" height="15" fill="#9aa0a6" rx="1"/>
  
  <!-- Connection line -->
  <line x1="110" y1="205" x2="150" y2="180" stroke="#34a853" stroke-width="3"/>
  
  <!-- Power flow indicator -->
  <polygon points="125,190 135,187 135,193" fill="#34a853"/>
  
  <!-- Title overlay -->
  <rect x="20" y="20" width="360" height="50" fill="rgba(26, 115, 232, 0.9)" rx="8"/>
  <text x="200" y="40" text-anchor="middle" fill="white" font-family="Arial, sans-serif" font-size="20" font-weight="bold">Small Scale KPP</text>
  <text x="200" y="58" text-anchor="middle" fill="white" font-family="Arial, sans-serif" font-size="14">Residential & Small Business</text>
  
  <!-- Specs -->
  <rect x="280" y="160" width="100" height="80" fill="rgba(255, 255, 255, 0.95)" stroke="#dadce0" stroke-width="1" rx="4"/>
  <text x="330" y="180" text-anchor="middle" fill="#202124" font-family="Arial, sans-serif" font-size="12" font-weight="bold">Specifications</text>
  <text x="290" y="195" fill="#5f6368" font-family="Arial, sans-serif" font-size="10">• 100kW capacity</text>
  <text x="290" y="208" fill="#5f6368" font-family="Arial, sans-serif" font-size="10">• Residential use</text>
  <text x="290" y="221" fill="#5f6368" font-family="Arial, sans-serif" font-size="10">• Easy installation</text>
  <text x="290" y="234" fill="#5f6368" font-family="Arial, sans-serif" font-size="10">• Low maintenance</text>
</svg>
